{
  "manifest_version": 3,
  "name": "Incident Analyzer Extension",
  "version": "1.0",
  "description": "Analyzes social media posts for incident data like accidents, fire, potholes, etc.",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://facebook.com/*",
    "https://instagram.com/*",
    "https://linkedin.com/*",
    "http://localhost:*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://facebook.com/*",
        "https://instagram.com/*",
        "https://linkedin.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Incident Analyzer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "admin.html",
  "web_accessible_resources": [
    {
      "resources": ["bridge.html", "admin.html", "index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "externally_connectable": {
    "matches": ["http://localhost:*/*", "https://*/*"]
  }
}